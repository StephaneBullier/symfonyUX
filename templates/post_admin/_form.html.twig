{{ form_start(form, { attr: {novalidate: 'novalidate'} }) }}
    <div class="mb-3">
        {{ form_label(form.title, 'Titre (Saisie obligatoire)', { 'label_attr': {'class': 'form-label'} }) }}
        <div class="input-group has-validation">
            <input type="text" id="post_title" name="post[title]" required="required" class="form-control {{
            form.title.vars.errors is not empty ? 'is-invalid' }}"
                   aria-describedby="validationServerEmailFeedback">
            <div id="validationServerEmailFeedback" class="invalid-feedback">
                {{ form_errors(form.title)}}
            </div>
        </div>
    </div>
    <div class="mb-3">
        {{ form_label(form.content, 'Contenu de l\'article (Saisie obligatoire)', { 'label_attr': {'class': 'form-label'} }) }}
        <div class="input-group has-validation">
            <textarea id="post_content" name="post[content]" required="required" class="form-control  {{
            form.content.vars.errors is not empty ? 'is-invalid' }}" aria-describedby="validationContentFeedback"></textarea>
            <div id="validationContentFeedback" class="invalid-feedback">
                {{ form_errors(form.content)}}
            </div>
        </div>
    </div>
    <input id="post_token" type="hidden" name="post[_token]" value="{{ csrf_token('post') }}">
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form, { 'render_rest': false }) }}
