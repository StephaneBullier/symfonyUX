<div class="modal fade" id="Modal" data-modal-form-target="modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">{{ modalTitle }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"
                 data-action="submit->modal-form#submitForm"
                 data-modal-form-target="modalBody"
            >
                {{ modalContent|default('chargement...') }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" data-action="modal-form#submitForm">Enregistrer</button>
            </div>
        </div>
    </div>
</div>
