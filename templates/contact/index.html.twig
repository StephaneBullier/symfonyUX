{% extends 'base.html.twig' %}

{% block title %}Nous contacter - {{ parent() }}{% endblock %}

{% block body %}
    <h2>Contactez nous</h2>
    <div class="row">
        <div class="col-md-8">
           {{ form_start(contactForm) }}
            <div class="mb-3">
                {{ form_label(contactForm.name, 'Votre nom', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(contactForm.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.subject, 'Votre sujet (Saisie obligatoire)', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(contactForm.subject, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.email, 'Votre courriel (Saisie obligatoire du type mail@exemple.com)', { 'label_attr': {'class':
                    'form-label'}
                }) }}
                {% if form_errors(contactForm.email) %}{% set error="is-invalid" %}{% endif %}
                <div class="input-group has-validation">
                    <input type="email" id="contact_form_email" name="contact_form[email]" required="required" class="form-control {{
                    contactForm.email.vars.errors is not empty ? 'is-invalid' }}"
                           aria-describedby="validationServerEmailFeedback">
                    <div id="validationServerEmailFeedback" class="invalid-feedback">
                        {{ form_errors(contactForm.email)}}
                    </div>
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.phone, 'Votre téléphone (Saisie attendue : 01 00 00 00 00)', { 'label_attr': {'class':
                    'form-label'}
                }) }}
                {{ form_widget(contactForm.phone, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.message, 'Votre message (Message d\'au moins 10 caractères)', { 'label_attr': {'class':
                'form-label'} }) }}
                {% if form_errors(contactForm.message) %}{% set error="is-invalid" %}{% endif %}
                <div class="input-group has-validation">
                    <textarea id="contact_form_message" name="contact_form[message]" required="required" class="form-control {{
                    contactForm.message.vars.errors is not empty ? 'is-invalid' }}"
                              aria-describedby="validationServerMessageFeedback"></textarea>
                    <div id="validationServerMessageFeedback" class="invalid-feedback">
                        {{ form_errors(contactForm.message)}}
                    </div>
                </div>
            </div>
            {{ form_widget(contactForm.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
            <input type="hidden" id="contact_form__token" name="contact_form[_token]" value="{{ csrf_token('contact_form') }}">
            {{ form_end(contactForm, {'render_rest': false}) }}
        </div>
        <div class="col md-4">
            <h3>Coordonnées</h3>
            <address>
                <h4>Nom de la société</h4>
                <ul>
                    <li>3 rue de Trivaux</li>
                    <li>92190 MEUDON</li>
                    <li>Tél. <a href="tel:+3390090909">+33 9 90 900 900</a></li>
                    <li>Horaires d'ouverture</li>
                </ul>
            </address>
        </div>
    </div>
{% endblock %}
